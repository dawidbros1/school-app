{% extends 'base.html.twig' %}

{% block title %}
	Lista uczniów
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/list/main.css') }}"/>
{% endblock %}

{% block body %}
	<div id="list">
		<h1 id="title">{{ class.name }}</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Nr.</th>
					<th>Imię</th>
					<th>Nazwisko</th>
					<th>Adres email</th>
					<th>PESEL</th>
					<th>Status konta</th>
				</tr>
			</thead>

			<tbody>
				{% for student in class.students %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>{{ student.firstName }}</td>
						<td>{{ student.lastName }}</td>
						<td>{{ student.email }}</td>
						<td>{{ student.pesel }}</td>

						<td>
							{% if student.isActive %}
								<span class='text-success'>Konto aktywne</span>
							{% else %}
								<span class='text-danger'>Konto nie aktywne</span>
							{% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
