{% extends 'base.html.twig' %}

{% block title %}
	Rejestracja
{% endblock %}

{% form_theme form _self %}

{% block body %}
	<div class="col-6 mx-auto border p-4 mt-2 bg-light">
		<h1 class="fw-bold text-center fs-3 w-100">Rejestracja</h1>

		{{ form_start(form)}}
		<div class="w-100 mb-2 d-flex">
			<div class="w-50 me-2">
				<label class="fw-bold w-100">{{ form_label(form.firstName) }}</label>
				{{ form_widget(form.firstName) }}
				{{ form_errors(form.firstName) }}
			</div>

			<div class="w-50 ms-2">
				<label class="fw-bold w-100">{{ form_label(form.lastName) }}</label>
				{{ form_widget(form.lastName) }}
				{{ form_errors(form.lastName) }}
			</div>
		</div>

		<div class="w-100 mb-2">
			<label class="fw-bold w-100">{{ form_label(form.role) }}</label>
			{{ form_widget(form.role) }}
			{{ form_errors(form.role) }}
		</div>

		<div class="w-100 mb-2">
			<label class="fw-bold w-100">{{ form_label(form.email) }}</label>
			{{ form_widget(form.email) }}
			{{ form_errors(form.email) }}
		</div>

		<div class="w-100 mb-2">
			<label class="fw-bold w-100">{{ form_label(form.plainPassword) }}</label>
			{{ form_widget(form.plainPassword) }}
			{{ form_errors(form.plainPassword) }}
		</div>

		<div class="w-100 mb-2">
			<label class="fw-bold w-100">{{ form_label(form.passwordRepeat) }}</label>
			{{ form_widget(form.passwordRepeat) }}
			{{ form_errors(form.passwordRepeat) }}
		</div>

		<div class="w-100 mb-2">
			{{ form_widget(form.agreeTerms) }}
			<label class="fw-bold me-1">{{ form_label(form.agreeTerms) }}</label>
			{{ form_errors(form.agreeTerms) }}
		</div>

		<div class="w-100">
			{{ form_widget(form.submit) }}
		</div>

		{{ form_end(form) }}

		<div class="mt-2">
			Masz już konto?
			<a href="{{ path('app_login') }}">Zaloguj się</a>
		</div>
	</div>
{% endblock %}
