{% extends 'base.html.twig' %}

{% block title %}
	Rejestracja
{% endblock %}

{% block body %}
	<div class="col-6 mx-auto border p-4 mt-5 bg-light">
		<h1 class="fw-bold text-center fs-3 w-100">Autoryzacja do tworzenia konta</h1>

		<form method="GET">
			<div class="w-100 mb-2">
				<label class="fw-bold w-100">PESEL</label>
				<input type="text" name="pesel" placeholder="Wprowadź numer PESEL" class="form-control">
			</div>

			<div class="w-100 mb-2">
				<label class="fw-bold w-100">CODE</label>
				<input type="text" name="code" placeholder="Wprowadź kod" class="form-control">
			</div>

			<button class="btn btn-primary w-100" type="submit">
				OK
			</button>
		</form>
	</div>
{% endblock %}
