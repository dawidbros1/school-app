{% extends 'base.html.twig' %}

{% block title %}
	Dashboard
{% endblock %}

{% block body %}
	<div id="dashboard" class="center">
		{% for box in boxes %}
			<div class="col-12 col-lg-6 col-xl-4">
				<a href="{{ box.url }}">
					<div class="item">
						<div class="title">{{ box.title }}</div>
						<div class="content">
							<img src="{{ asset('images/dashboard/' ~ box.image ) }}">
							<small class="description">{{ box.description }}</small>
						</div>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
