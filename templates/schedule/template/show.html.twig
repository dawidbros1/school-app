{% extends 'base.html.twig' %}

{% block title %}
   Szablon harmonogramu
{% endblock %}

{% block stylesheets %}
   <style>
      input[type="date"] {
         padding: 5px 10px;
         width: 100%;
      }
   </style>
{% endblock %}

{% block form %}
   {% block form_content %}
      <h2 class="form-title">{{ form_label(form) }}</h2>
      {{ form_start(form) }}

      <div class="mb-2">
         <div class="mb-2 row">
            <div class="col-6">
               {{ form_widget(form.lessonTime) }}
               {{ form_errors(form.lessonTime) }}
            </div>

            <div class="col-6">
               {{ form_widget(form.subject) }}
               {{ form_errors(form.subject) }}
            </div>
         </div>

         <div class="row">
            <div class="col-6">
               {{ form_widget(form.teacher) }}
               {{ form_errors(form.teacher) }}
            </div>

            <div class="col-6 ">
               {{ form_widget(form.place) }}
               {{ form_errors(form.place) }}
            </div>
         </div>
      </div>

      <div class="col-12">
         {{ form_widget(form.submit) }}
      </div>
      {{ form_end(form) }}

   {% endblock %}
{% endblock %}

{% block body %}
   <div id="block" class="bg-light">
      <h1 id="main-title">Harmonogram zajęć - szablon</h1>

      <div class="row text-center mt-3 mb-5">
         <a class="col-5 col-md-2 my-1 mx-auto btn {{ day == 'monday' ? " btn-success" : " btn-primary" }}" href="{{ path('app_scheduleTemplate_show', {day: "monday", class_id}) }}">Poniedziałek</a>
         <a class="col-5 col-md-2 my-1 mx-auto btn {{ day == 'tuesday' ? " btn-success" : " btn-primary" }}" href="{{ path('app_scheduleTemplate_show', {day: "tuesday", class_id}) }}">Wtorek</a>
         <a class="col-5 col-md-2 my-1 mx-auto btn {{ day == 'wednesday' ? " btn-success" : " btn-primary" }}" href="{{ path('app_scheduleTemplate_show', {day: "wednesday", class_id}) }}">Środa</a>
         <a class="col-5 col-md-2 my-1 mx-auto btn {{ day == 'thursday' ? " btn-success" : " btn-primary" }}" href="{{ path('app_scheduleTemplate_show', {day: "thursday", class_id}) }}">Czwartek</a>
         <a class="col-11 col-md-2 my-1 mx-auto btn {{ day == 'friday' ? " btn-success" : " btn-primary" }}" href="{{ path('app_scheduleTemplate_show', {day: "friday", class_id}) }}">Piątek</a>
      </div>

      {% if schedule.isEmpty == false %}
         <div>
            <table id="schedule" class="table table-striped table-sm">
               <thead>
                  <tr>
                     <th>Nr.</th>
                     <th>Godzina</th>
                     <th>Przedmiot</th>
                     <th>Nauczyciel</th>
                     <th>Miejsce</th>
                     <th></th>
                  </tr>
               </thead>
               <tbody>
                  {% for lesson in schedule.lessons %}
                     <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ lesson.lessonTime.time }}</td>
                        <td>{{ lesson.subject.name }}</td>
                        <td>{{ lesson.teacher.name }}</td>
                        <td>{{ lesson.place }}</td>
                        <td>
                           <div class="d-flex">
                              <a href="{{ path('app_scheduleTemplate_edit', {id: lesson.id}) }}" class="me-3">
                                 <img class="img-small" src="{{ asset('images/settings.png/') }}"/>
                              </a>
                              <form action="{{ path('app_scheduleTemplate_delete', {id: lesson.id}) }}" method="post">
                                 <button class="clear" type="submit"><img class="img-small" src="{{ asset('images/trash.png') }}"/></button>
                              </form>
                           </div>
                        </td>
                     </tr>
                  {% endfor %}
               </tbody>
            </table>

            {% if initializerForm != null %}
               <div class="border bg-light p-3 mx-auto col-12 col-md-9 col-lg-7 col-xxl-5">
                  <h2 class="form-title">Generowanie harmonogramu</h2>

                  {{ form_start(initializerForm) }}

                  <div class="row">
                     <div class="col-6">
                        {{ form_widget(initializerForm.from) }}
                        {{ form_errors(initializerForm.from) }}
                     </div>

                     <div class="col-6">
                        {{ form_widget(initializerForm.to) }}
                        {{ form_errors(initializerForm.to) }}
                     </div>

                     <div class="col-12 mt-2">
                        {{ form_widget(initializerForm.submit) }}
                     </div>
                  </div>

                  {{ form_end(initializerForm) }}
               </div>
            {% endif %}

            <div class="col-12 mt-2">
               <a class="text-white" href="{{ path('app_class_schedule_show', {class_id}) }}">
                  <button class="btn btn-primary w-100 fw-bold" type="button">
                     Zobacz harmonogram klasy
                  </button>
               </a>
            </div>
         </div>
      {% else %}
         <p class="fs-1 text-center mt-5 fw-bold">
            BRAK ZAJĘĆ
         </p>
      {% endif %}
   </div>
{% endblock %}
