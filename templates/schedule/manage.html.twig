{% extends 'base.html.twig' %}

{% block title %}
   Szablon harmonogramu
{% endblock %}

{% block stylesheets %}
   <style>
      input[type="date"] {
         padding: 5px 10px;
         width: 100%;
      }
   </style>
{% endblock %}

{% block form %}
   {% block form_content %}
      <h2 class="form-title">{{ form_label(form) }}</h2>
      {{ form_start(form) }}

      <div class="mb-2">
         <div class="mb-2 row">
            <div class="col-6">
               {{ form_widget(form.lessonTime) }}
               {{ form_errors(form.lessonTime) }}
            </div>

            <div class="col-6">
               {{ form_widget(form.subject) }}
               {{ form_errors(form.subject) }}
            </div>
         </div>

         <div class="row">
            <div class="col-6">
               {{ form_widget(form.teacher) }}
               {{ form_errors(form.teacher) }}
            </div>

            <div class="col-6 ">
               {{ form_widget(form.place) }}
               {{ form_errors(form.place) }}
            </div>
         </div>
      </div>

      <div class="col-12">
         {{ form_widget(form.submit) }}
      </div>
      {{ form_end(form) }}
   {% endblock %}
{% endblock %}

{% block body %}
   <div id="sheduleManage">
      <h1 id="main-title">Harmonogram zajęć -
         {{ class.name }}
         ({{ date }})
      </h1>

      {% if schedule.lessons|length > 0 %}
         <div>
            <table id="schedule" class="table table-striped table-sm">
               <thead>
                  <tr>
                     <th>Nr.</th>
                     <th>Godzina</th>
                     <th>Przedmiot</th>
                     <th>Nauczyciel</th>
                     <th>Miejsce</th>
                     <th></th>
                  </tr>
               </thead>
               <tbody>
                  {% for lesson in schedule.lessons %}
                     <tr>
                        {% if lesson != null %}
                           <td>{{ loop.index }}</td>
                           <td>{{ lesson.lessonTime.time }}</td>
                           <td>{{ lesson.subject.name }}</td>
                           <td>{{ lesson.teacher.name }}</td>
                           <td>{{ lesson.place }}</td>
                           <td>
                              <div class="d-flex">
                                 <a href="{{ path('app_schedule_edit', {id: lesson.id}) }}" class="me-3">
                                    <img class="img-small" src="{{ asset('images/settings.png/') }}"/>
                                 </a>
                                 <form action="{{ path('app_schedule_delete', {id: lesson.id}) }}" method="post">
                                    <button class="clear" type="submit"><img class="img-small" src="{{ asset('images/trash.png') }}"/></button>
                                 </form>
                              </div>
                           </td>

                        {% else %}
                           <td>{{ loop.index }}</td>
                           <td>{{ lessonTimes[loop.index - 1].time }}</td>
                           <td colspan="4"></td>
                        {% endif %}
                     </tr>
                  {% endfor %}
               </tbody>
            </table>
         </div>
      {% else %}
         <p class="fs-1 text-center mt-5 fw-bold">
            BRAK ZAJĘĆ
         </p>
      {% endif %}

      <a href="{{ path("app_class_schedule_show", {class_id: class.id, date }) }}">
         <button type="button" class="btn btn-primary w-100 fw-bold">Powrót</button>
      </a>
   </div>
{% endblock %}
